<resources>

    <style name="menu_button">
        <item name="android:background">@drawable/btn_rounded_corner_blue</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:translationZ">4dp</item>
    </style>

    <style name="red_button">
        <item name="android:background">@drawable/btn_rounted_corner_red</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:translationZ">4dp</item>
    </style>


    <style name="green_button">
        <item name="android:background">@drawable/btn_rounded_corner_green</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:translationZ">4dp</item>
    </style>

    <style name="yellow_button">
        <item name="android:background">@drawable/btn_rounded_corner_yellow</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:translationZ">4dp</item>
    </style>

    <style name="english_text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="input_text" parent="english_text">
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="table_button">
        <item name="android:layout_gravity">fill</item>
        <item name="android:elevation">20dp</item>
        <item name="android:padding">30dp</item>
    </style>


</resources>
